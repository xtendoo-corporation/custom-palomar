<odoo>
    <record id="view_signature_nif_wizard" model="ir.ui.view">
        <field name="name">signature.nif.wizard.form</field>
        <field name="model">signature.nif.wizard</field>
        <field name="arch" type="xml">
            <form string="Firma y NIF">
                <group>
                    <field name="nif"/>
                    <field name="signature" widget="signature"/>
                </group>
                <footer>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    <button string="Aceptar" type="object" name="action_confirm" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
