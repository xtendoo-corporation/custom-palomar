<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="show_cost_price_tree_product_template">
            <field name="name">show_cost_price_tree_product_template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">palomar_administration.show_cost_price</attribute>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="show_cost_price_form_product_product">
            <field name="name">show_cost_price_form_product_product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="groups">palomar_administration.show_cost_price</attribute>
                </xpath>
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">palomar_administration.show_cost_price</attribute>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="palomar_administration.show_cost_price_form_product_template">
            <field name="name">show_cost_price_form_product_template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="groups">palomar_administration.show_cost_price</attribute>
                </xpath>
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">palomar_administration.show_cost_price</attribute>
                </xpath>
                 <xpath expr="//div[@name='standard_price_uom']" position="replace">
                    <div name="standard_price_uom" groups="palomar_administration.show_cost_price">
                        <field name="standard_price" widget="monetary"
                               options="{'currency_field': 'cost_currency_id'}"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
