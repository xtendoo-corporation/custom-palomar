<odoo>
    <data>
        <record model="ir.module.category" id="group_others_security">
            <field name="name">Otros permisos especiales</field>
            <field name="description">Permisos especiales varios</field>
            <field name="sequence">60</field>
        </record>

        <record id="show_margins" model="res.groups">
            <field name="category_id" ref="group_others_security"/>
            <field name="name">Show Margins</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to view margins</field>
        </record>

         <record id="show_cost_price" model="res.groups">
            <field name="category_id" ref="group_others_security"/>
            <field name="name">Show cost price</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to view costs</field>
        </record>
    </data>
</odoo>
